<%- include('template/header', {tituloWeb: 'Página de Servicios'}); %>
<%- include('template/aside'), %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1> Servicios</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item active">Servicios</li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>
  
<!-- Main content -->
<section class="content">

  <!-- Default box -->
  <div class="card">
    <div class="card-header">
      <a href="/servicios/crear_servicio" class="btn btn-success">Crear Servicio</a>

      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
          <i class="fas fa-minus"></i>
        </button>
      </div>

    </div>
    <div class="card-body table-responsive p-0">
      <% if (arrayServicios.length > 0) { %>
        <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Servicio</th>
                <th scope="col">Descripción</th>
                <th scope="col">Acción</th>
              </tr>
            </thead>
            <tbody>
                <% arrayServicios.forEach(servicio => { %>
                    <tr>
                        <th scope="row"><%= servicio.id %></th>
                        <td><%= servicio.servicio %></td>
                        <td><%= servicio.descripcion %></td>
                        <td>
                          <a href="servicios/<%= servicio.id %>" class="btn btn-warning btn-sm">Editar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
          </table>    
    <% } %>
  </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</section>
<!-- /.content -->
</div>

<%- include('template/footer'); %>
